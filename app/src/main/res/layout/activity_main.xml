<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#080073"
    tools:context=".MainActivity"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:weightSum="1">




    <!--Textbox that lets the user know what service the service is on-->
    <!--Service will change once the button has been clicked, service will be on and off-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:id="@+id/serviceStatus"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="110dp"
        style="?android:listSeparatorTextViewStyle"
        android:textAlignment="center"/>

    <!--Formatting for the Help button, takes them to the help activity-->

    <!--This is the button which turns the messaging service on and off-->
    <Button
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/button"
        android:background="@drawable/start_button"
        android:layout_above="@+id/serviceStatus"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>

