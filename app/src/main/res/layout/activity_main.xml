<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#080073"
    tools:context=".MainActivity"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:weightSum="1">

    <!--This is the button which turns the messaging service on and off-->
    <Button
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:id="@+id/button"
        android:background="@drawable/start_button"
        android:layout_marginBottom="22dp"
        android:layout_below="@+id/serviceStatus"

        android:layout_centerHorizontal="true" />

    <!--Textbox that lets the user know what service the service is on-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:id="@+id/serviceStatus"
        style="?android:listSeparatorTextViewStyle"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="15dp" />
</RelativeLayout>

